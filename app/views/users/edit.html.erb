<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <labal for="inputName">Name</labal>
  <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前" %>
  <labal for="inputImage">ProfileImage</labal>
  <%= f.file_field :profile_image, pleceholder: "プロフィール画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>